{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Visualizer",
  "version": "0.1.0",
  "identifier": "com.visualizer.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Visualizer",
        "width": 400,
        "height": 200,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false,
        "shadow": false
      },
      {
        "label": "settings",
        "title": "Visualizer Settings",
        "width": 350,
        "height": 500,
        "decorations": true,
        "resizable": false,
        "alwaysOnTop": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
